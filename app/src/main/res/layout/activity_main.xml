<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/activity_main_remplir_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:text="Remplissez un ou plusieurs champs :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_main_input_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_airplane_icon"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Ex : ENBR " />

    <EditText
        android:id="@+id/activity_main_input_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_airplane_icon"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="ex : ENBR (facultatif)"/>

    <EditText
        android:id="@+id/activity_main_input_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_airplane_icon"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Ex : ENBR (facultatif)"/>

    <EditText
        android:id="@+id/activity_main_input_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_airplane_icon"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Ex : ENBR (facultatif)"/>

    <Button
        android:id="@+id/activity_main_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="Chercher" />

</LinearLayout>